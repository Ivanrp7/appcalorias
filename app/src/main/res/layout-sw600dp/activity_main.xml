<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="481dp"
        android:layout_height="249dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.674">

        <EditText
            android:id="@+id/textoEdad"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:ems="10"
            android:hint="Edad"
            android:inputType="number"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/textoAltura"
            android:layout_width="481dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Altura en Cm"
            android:inputType="number"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/textoPeso"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:ems="10"
            android:hint="Peso en Kg"
            android:inputType="number|numberDecimal"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:id="@+id/botonCalcular"
        android:layout_width="178dp"
        android:layout_height="96dp"
        android:paddingRight="24dp"
        android:text="Calcular"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.878"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="260dp"
        android:layout_height="74dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167">

        <RadioButton
            android:id="@+id/radioButtonHombre"
            android:layout_width="111dp"
            android:layout_height="73dp"
            android:checked="true"
            android:text="Hombre" />

        <RadioButton
            android:id="@+id/radioButtonMujer"
            android:layout_width="125dp"
            android:layout_height="59dp"
            android:text="Mujer" />
    </RadioGroup>


    <TextView
        android:id="@+id/textViewProtein"
        android:layout_width="160dp"
        android:layout_height="59dp"
        android:gravity="center"
        android:hint="Proteínas"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.812" />

    <TextView
        android:id="@+id/textViewHidratos"
        android:layout_width="160dp"
        android:layout_height="59dp"
        android:gravity="center"
        android:hint="Hidratos"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956" />

    <TextView
        android:id="@+id/textViewGrasa"
        android:layout_width="160dp"
        android:layout_height="59dp"
        android:gravity="center"
        android:hint="Grasas"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.882" />

    <TextView
        android:id="@+id/textViewCaloriasTotales"
        android:layout_width="244dp"
        android:layout_height="89dp"
        android:gravity="center"
        android:hint="Calorias Totales"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.929" />

    <TextView
        android:id="@+id/textViewCaloriasDiarias"
        android:layout_width="244dp"
        android:layout_height="89dp"
        android:gravity="center"
        android:hint="Calorias diarias"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.834" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="682dp"
        android:layout_height="169dp"
        android:gravity="center"
        android:includeFontPadding="true"
        android:text="IVÁN ROA PRIETO"
        android:textColor="#009688"
        android:textColorHint="#A17878"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />

    <RadioGroup
        android:layout_width="545dp"
        android:layout_height="296dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.319">

        <RadioButton
            android:id="@+id/radioButtonPoco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Poco o ningún ejercicio"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioButtonLigero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejercicio ligero (1-3 días a la semana)"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioButtonModerado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejercicio moderado (3-5 días a la semana)"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioButtonFuerte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejercicio fuerte (6-7 días a la semana)"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioButtonMuyFuerte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Ejercicio muy fuerte (dos veces al día, entrenamientos muy duros)	"
            android:textSize="24sp" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="261dp"
        android:layout_height="253dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.901"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.677">

        <RadioButton
            android:id="@+id/radioButtonDefinicion"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="Definición"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioButtonVolumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volumen"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioButtonMantenimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Mantenimiento"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioButtonDfExtrema"
            android:layout_width="match_parent"
            android:layout_height="64dp"

            android:text="Definición extrema"
            android:textSize="24sp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>